<div class="container">
  <div align="center">
    <img src="https://ih0.redbubble.net/image.568568800.3284/pp,550x550.u1.jpg" alt="Cute Burger!" width="300">
    <h1>Eat the Burger!</h1>
  </div>
  <div class="row" id="burger_list">
    <div class="col-6" id="list">
      <h2>Burgers I want to Eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burgers eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6" id="devouredList">
      <h2>Burgers I've Eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burgers eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <form class="newBurger">
    <h2>Add a Burger</h2>
    <div class="form-group">
      <input type="text" id="burgerName" name="name">
    </div>

    <p>Enter a burger you would like to add and click SUBMIT!</p>
    <button type="submit" class="btn" id="submit">Submit</button>
  </form>
</div>